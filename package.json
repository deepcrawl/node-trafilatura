{
  "name": "@deepcrawl/node-trafilatura",
  "version": "0.2.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/deepcrawl/node-trafilatura.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "clean": "pnpm shx rm -rf ./dist",
    "build": "pnpm clean && pnpm tsc",
    "postbuild": "pnpm python:install && pnpm python:build && cp -R ./python/dist/trafilatura-recall-extractor ./dist/python",
    "lint": "pnpm eslint --quiet --cache .",
    "python:install": "python3 -m venv ./python/.venv && source ./python/.venv/bin/activate && pip3 install -r ./python/requirements.txt",
    "python:clean": "pnpm shx rm -rf ./python/dist ./python/build",
    "python:build": "pnpm python:clean && source ./python/.venv/bin/activate && pyinstaller --collect-data trafilatura --distpath python/dist --workpath python/build --specpath python ./python/src/trafilatura-recall-extractor.py"
  },
  "devDependencies": {
    "@tsconfig/node20": "20.1.5",
    "@types/fs-extra": "11.0.4",
    "eslint": "9.25.1",
    "eslint-config-deepcrawl": "14.4.2",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "shx": "0.4.0",
    "ts-jest": "29.3.2",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.9.0",
  "dependencies": {
    "uuid": "^11.1.0"
  }
}
